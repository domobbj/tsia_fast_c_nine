<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryDark">@color/theme</item>
        <item name="android:textSize">15sp</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fillViewport">true</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/all_transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="ShareDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>

    </style>

    <style name="submit_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/app_bg2</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:gravity">center</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="submit_dialog1" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/app_bg2</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Theme.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>


    <style name="btn_login">
        <item name="android:layout_height">47dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/bn_login</item>
        <item name="android:textColor">@color/theme</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="bottom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:gravity">bottom</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>


    <style name="clearedit" parent="@android:style/Widget.EditText">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="AutoUpdateDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="AutoUpdateDialogText">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AutoUpdateDialogText.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="btn_register">
        <item name="android:layout_height">47dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/bn_register</item>
        <item name="android:textColor">#4bd863</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="edittext_style">
        <item name="android:layout_height">50dp</item>
        <item name="android:textColorHint">#d0d0d0</item>
        <item name="android:textColor">#555555</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/my_edittext</item>
        <item name="android:textSize">15sp</item>
    </style>



    <style name="edittext_style1">
        <item name="android:layout_height">50dp</item>
        <item name="android:textColorHint">#d0d0d0</item>
        <item name="android:textColor">#555555</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/my_edittext1</item>
        <item name="android:textSize">15sp</item>
    </style>


</resources>
