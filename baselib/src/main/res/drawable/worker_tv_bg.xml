<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <corners android:radius="@dimen/bn_corner"/>
            <solid android:color="@color/google_red"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <corners android:radius="@dimen/bn_corner"/>
            <solid android:color="@color/google_red"/>
            <stroke android:width="@dimen/bn_stroke" android:color="#FF4bd863"/>
        </shape>
    </item>

</selector>