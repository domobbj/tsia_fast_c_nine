<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_grey">

    <TextView
        android:id="@+id/publish_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitefe"
        android:drawableRight="@mipmap/next1"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="发布的任务"
        android:drawableLeft="@mipmap/renwu"
        android:drawablePadding="8dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:textColor="@color/black3" />

    <ImageView
        android:id="@+id/hint_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/publish_tv"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
       android:src="@mipmap/shoudaorenwu" />

    <ListView
        android:id="@+id/publish_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hint_tv"></ListView>
</RelativeLayout>